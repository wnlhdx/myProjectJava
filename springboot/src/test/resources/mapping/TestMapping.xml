<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.myproject.javase.mapper.TestMapper">
 
    <resultMap id="BaseResultMap" type="com.myproject.springboot.entity.TestEntity">
        <result column="username" jdbcType="VARCHAR" property="userName" />
        <result column="password" jdbcType="VARCHAR" property="password" />
    </resultMap>
 
    <select id="login" resultType="com.myproject.springboot.entity.TestEntity">
        select * from TestUser where username = #{userName} and password = #{password}
    </select>
 	<update id="setPass" >
        update TestUser set password = #{password}  where username = #{userName}
    </update>
    <insert id="addUser" >
        insert into TestUser values(#{userName},#{password})
    </insert>
    <delete id='delUser'>
    	delete from TestUser where username = #{userName}
    </delete>
</mapper>